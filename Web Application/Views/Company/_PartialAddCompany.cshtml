<style>
    .rw {
        width: 50%;
    }
    .rws{
        width: 33%;
    }

    body {
        padding: 10px;
    }

    #exTab1 .tab-content {
        color: black;
        background-color: white;
        padding: 5px 15px;
    }

    #exTab2 h3 {
        color: black;
        background-color: white;
        padding: 5px 15px;
    }

    /* remove border radius for the tab */

    #exTab1 .nav-pills > li > a {
        border-radius: 0;
        margin-left: 5px;
    }

    /* change border radius for the tab , apply corners on top*/

    #exTab3 .nav-pills > li > a {
