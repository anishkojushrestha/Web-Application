@model Web_Application.ModelViews.CompanyMV


<style>
    .rw {
        width: 50%;
    }

    body {
        padding: 10px;
    }

    #exTab1 .tab-content {
        color: black;
        background-color: white;
        padding: 5px 15px;
    }

    #exTab2 h3 {
        color: black;
        background-color: white;
        padding: 5px 15px;
    }

    /* remove border radius for the tab */

    #exTab1 .nav-pills > li > a {
        border-radius: 0;
        margin-left:5px;
    }

    /* change border radius for the tab , apply corners on top*/

    #exTab3 .nav-pills > li > a {
        border-radius: 4px 4px 0 0;
    }

    #exTab3 .tab-content {
        color: white;
        background-color: #428bca;
        padding: 5px 15px;
    }

</style>
<div class="modal fade" id="addRegister" data-bs-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content" style="width:100%;  margin-top: 20px;">
            <div class="modal-header">
                <h4 class="modal-title" id="addRegisterLabel">Add Company</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal">
                </button>

            </div>
            <div class="modal-body">
               
                <!-- Tabs content -->
                <div id="exTab1" class="container">
                    <ul class="nav nav-pills">
                        <li class="active"> 
                            <a href="#1a" data-toggle="tab" class="btn btn-secondary" >Company</a>
                        </li>
                        <li>
                            <a href="#2a" data-toggle="tab" class="btn btn-secondary">Contact</a>
                        </li>
                    
                    </ul>

                    <div class="tab-content clearfix">
                        <div class="tab-pane active" id="1a">
                            <form asp-action="AddCompany" asp-controller="Company">
                                @Html.AntiForgeryToken()
                                <div class="col" style="margin-left: 10px;">
                                    <div class="row pb-4">
                                        <div >
                                            <label class="form-label">Company Name:</label>
                                            <input type="text" name="CompanyName" class="form-control" required>
                                        </div>
                                        
                                    </div>
                                    <div class="row pb-4">
                                        <div class="rw">

                                            <label class="form-label">Registration Date:</label>
                                            <input type="date" name="RegistrationDate" class="form-control" required>
                                        </div>
                                        <div class="rw">
                                            <label class="form-label">Email:</label>
                                            <input type="email" name="Email" class="form-control" required>
                                        </div>
                                    </div>
                                    <div class="row pb-4">
                                        <div class="rw">
                                            <label class="form-label">Address:</label>
                                            <input type="text" name="Address" class="form-control" required></input>
                                        </div>
                                        <div class="rw">
                                            <label class="form-label">Pan No.</label>
                                            <input type="text" name="PanNumber" class="form-control" required></input>
                                        </div>
                                    </div>
                                    <div class="row pb-4">
                                        
                                        <div class="rw">
                                            <label class="form-label">City:</label>
                                            <input type="text" name="City" class="form-control" required></input>
                                        </div>
                                        <div class="rw">
                                            <label class="form-label">Country:</label>
                                            <input type="text" name="Country" class="form-control" required></input>
                                        </div>
                                    </div>
                                    <div class="row pb-4">
                                        <div class="rw">
                                            <label class="form-label">Achive From:</label>
                                            <input type="date" name="AchiveFrom" class="form-control" required></input>
                                        </div>
                                        <div class="rw">
                                            <label class="form-label">Achive To:</label>
                                            <input type="date" name="AchiveTo" class="form-control" required></input>
                                        </div>
                                    </div>
                                    

                                </div>


                            </form>
                        </div>
                        <div class="tab-pane" id="2a">
                                <form asp-action="AddCompany" asp-controller="Company">
                                    @Html.AntiForgeryToken()
                                <div class="col" style="margin-left: 10px;">
                                    <div class="row pb-4">
                                        <div class="rw">

                                            <label class="form-label">Contact Name:</label>
                                            <input type="date" name="contactPersonVM.ContactName" class="form-control" required>
                                        </div>
                                        <div class="rw">
                                            <label class="form-label">Gender:</label>
                                            <select class="form-control" name="contactPersonVM.Gender">
                                                <option>Male</option>
                                                <option>Female</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="row pb-4">
                                        <div class="rw">
                                            <label class="form-label">Address:</label>
                                            <input type="text" name="contactPersonVM.Address" class="form-control" required></input>
                                        </div>
                                        <div class="rw">
                                            <label class="form-label">Phone Number:</label>
                                            <input type="text" name="contactPersonVM.PhoneNumber" class="form-control" required></input>
                                        </div>
                                    </div>
                                    <div class="row pb-4">

                                        <div class="rw">
                                            <label class="form-label">Mobile Number:</label>
                                            <input type="text" name="contactPersonVM.MobileNumber" class="form-control" required></input>
                                        </div>
                                        <div class="rw">
                                            <label class="form-label">Country:</label>
                                            <input type="text" name="contactPersonVM" class="form-control" required></input>
                                        </div>
                                    </div>
                                    
                                        @*<div class="rw">
                                            <label class="form-label">Mobile Number:</label>
                                            <input type="text" asp-for="MobileNumber" class="form-control" required>
                                        </div>*@
                                        </div>
                                        
                                    
                                        
</form>
                       
                    </div>
                        <div class="row">
                            <div class="btnn" style="display:flex; flex-direction:column; align-items:center;">
                                <button type="submit" value="AddCompany" class="btn btn-primary">Submit</button>

                            </div>
                        </div>
                </div>
                

              


                <!-- Bootstrap core JavaScript
                    ================================================== -->
                <!-- Placed at the end of the document so the pages load faster -->
                <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
                <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
            </div>

        </div>
    </div>
</div>

