<div class="modal fade" id="addRegister" data-bs-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content" style="width:130%;  margin-top: 20px; margin-left:-5%">
            <div class="modal-header p-2">
                <h4 class="modal-title" id="addRegisterLabel" style="font-size:large">Add Company</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal">
                </button>

            </div>
            <div class="modal-body">

                <!-- Tabs content -->
                <div id="exTab1" class="container">
                    <ul class="nav nav-pills">
                        <li class="active">
                            <a href="#1a" data-toggle="tab" class="btn btn-secondary">Company</a>
                        </li>
                        <li>
                            <a href="#2a" data-toggle="tab" class="btn btn-secondary">Contact</a>
                        </li>

                    </ul>
                    <form id="form1" asp-action="AddCompany" asp-controller="Company">
                    <div class="tab-content clearfix">
                        <div class="tab-pane active" id="1a">
                          
                                @Html.AntiForgeryToken()
                                <div class="col" style="margin-left: 10px; ">
                                    <div class="row pb-3" >
                                        <div>
                                            <label class="form-label">Company Name:</label>
                                            <input type="text" asp-for="CompanyName" class="form-control" style="height:33px" required>
                                        </div>

                                    </div>
                                    <div class="row pb-3">
                                        <div class="rw">
                                            <label class="form-label">Registration Date:</label>
                                            <input type="date" asp-for="RegistrationDate" class="form-control" style="height:33px" required>
                                        </div>
                                        <div class="rw">
                                            <label class="form-label">Email:</label>
                                            <input type="email" asp-for="Email" class="form-control" style="height:33px" required>
                                        </div>
                                    </div>
                                    <div class="row pb-3">
                                        <div class="rw">
                                            <label class="form-label">Address:</label>
                                            <input type="text" asp-for="Address" class="form-control" style="height:33px" required>
                                        </div>
                                        <div class="rw">
                                            <label class="form-label">Pan No.</label>
                                            <input type="text" asp-for="PanNumber" class="form-control" style="height:33px" required>
                                        </div>
                                    </div>
                                    <div class="row pb-3">

                                        <div class="rw">
                                            <label class="form-label">City:</label>
                                            <input type="text" asp-for="City" class="form-control" style="height:33px" required>
                                        </div>
                                        <div class="rw">
                                            <label class="form-label">Country:</label>
                                            <input type="text" asp-for="Country" class="form-control" style="height:33px" required>
                                        </div>
                                    </div>
                                    <div class="row pb-3">
                                        <div class="rw">
                                            <label class="form-label">Valid From:</label>
                                            <input type="date" asp-for="ValidFrom" class="form-control" style="height:33px" required>
                                        </div>
                                        <div class="rw">
                                            <label class="form-label">Valid To:</label>
                                            <input type="date" asp-for="ValidTo" class="form-control" style="height:33px" required>
                                        </div>
                                    </div>
                                </div>
                           
                        </div>
                        <div class="tab-pane" id="2a">
                                <div class="col" style="margin-left: 10px;">
                                    <div class="row pb-3">
                                        <div class="rws">

                                            <label class="form-label">Contact Name:</label>
                                            <input type="text" id="contact" name="contactName" style="height:33px" class="form-control" required>
                                        </div>
                                        <div class="rws">
                                            <label class="form-label">Gender:</label>
                                            <select class="form-control" id="gender" name="gender" style="height:33px">
                                                <option>Male</option>
                                                <option>Female</option>
                                            </select>
                                        </div>
                                        <div class="rws">
                                            <label class="form-label">Address:</label>
                                            <input type="text" name="address" id="address" class="form-control" style="height:33px" required>
                                        </div>
                                    </div>
                                    <div class="row pb-3">
                                        <div class="rws">
                                            <label class="form-label">Phone Number:</label>
                                            <input type="text" name="phoneNumber" id="phone" class="form-control" style="height:33px" required>
                                        </div>
                                        <div class="rws">
                                            <label class="form-label">Mobile Number:</label>
                                            <input type="text" name="mobileNumber" id="mobile" class="form-control" style="height:33px" required>
                                        </div>
                                        <div class="rws">
                                            <label class="form-label">Desigation:</label>
                                            <select class="form-control" id="designation" name="designation" style="height:33px">
                                                <option>Staff</option>
                                                <option>Assistance</option>
                                                <option>CEO</option>
                                                <option>Reception</option>
                                            </select>
                                        </div>
                                    </div>

                                    @*<div class="rw">
                                    <label class="form-label">Mobile Number:</label>
                                    <input type="text" asp-for="MobileNumber" class="form-control" required>
                                    </div>*@
                                </div>
                                <button type="button" class="btn btn-primary small" id="add" style="margin-left:80%; margin-top: -8px;">Add</button>
                            <table class="table align-middle" id="datatable">
                                <thead>
                                    <tr>
                                        <th scope="col">Contact Name</th>
                                        <th scope="col">Gender</th>
                                        <th scope="col">Address</th>
                                        <th scope="col">Phone</th>
                                        <th scope="col">Mobile</th>
                                        <th scope="col">Designation</th>
                                        <th scope="col">Action</th>
                                    </tr>
                                </thead>
                                <tbody id="tbldatatabletbody">
