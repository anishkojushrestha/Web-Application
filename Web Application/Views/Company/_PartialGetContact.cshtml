@model IEnumerable<Web_Application.ModelViews.ContactPersonVM>

<style>
    .rw {
        width: 30%;
    }

   

</style>
<div class="modal fade" id="addRegister" data-bs-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content" style="width:170%;  margin-top: 20px; margin-left:-31%">
            <div class="modal-header p-1" style="background-color:#569A75">
                <h4 class="modal-title text-white" id="addRegisterLabel" style="font-size: large;">List of Contact Person</h4>
                <button type="button" class="btn-close m-0" data-bs-dismiss="modal">
                </button>

            </div>
            <div class="modal-body ">

                <table class="table table-hover" style="font-size:80%">
                <thead>
                    <tr>
                        <th style="width: 10px">Contact Person</th>
                        <th>Gender</th>
                        <th>Address</th>
                        <th>Email</th>
                        <th>Phone No.</th>
                        <th>Mobile No.</th>
                        <th>Designtaion</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var data in Model)
                    {
                        <tr>
                            <td>@data.ContactName</td>
                            <td>@data.Gender</td>
                            <td>@data.Address</td>
                            <td>@data.Email</td>
                            <td>@data.phoneNumber</td>
                            <td>@data.MobileNumber</td>
                            <td>@data.Designation</td>
                        </tr>
                    }

                </tbody>
                </table>
            </div>

        </div>
    </div>
</div>
