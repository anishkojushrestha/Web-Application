</style>
<div class="modal fade" id="addRegister" data-bs-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content" style="width:55%;  margin-top: 20px; margin-left:24%">
            <div class="modal-header p-2">
                <h4 class="modal-title" id="addRegisterLabel">Issue</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal">
                </button>

            </div>
            <div class="modal-body">
                <form asp-action="Resolve" asp-controller="Issue">

                    @Html.AntiForgeryToken()
                    <div class="col" style="margin-left: 13px; ">
                        <div class="row pb-2">

                           
                        
                                <input asp-for="Id" hidden />
                                <div class="row pb-3">

                                    <div class="rw">
                                        <label class="form-label">Resolve By:</label>
                                        <input type="date" asp-for="ResolveBy" style="height:33px" class="form-control" required>
                                    </div>
                                </div>
                            

                        @*<div class="row pb-1">

                        <div class="rw">
                        <label class="form-label">Deleted By:</label>
                        <input type="date" asp-for="DeletedBy" style="height:33px" class="form-control" required>
                        </div>
                        <div class="rw">
                        <label class="form-label">Close By:</label>
                        <input type="date" asp-for="CloseBy" style="height:33px" class="form-control" required>
                        </div>
                        </div>*@
                        

                        <div class="row">
                            <div class="btnn" style="display:flex; flex-direction:column; align-items:center;">
                                <button type="submit" class="btn btn-primary">Submit</button>

                            </div>
                        </div>

                    </div>


                </form>
            </div>

        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $("#selComp").change(function () {
            var id = $("#selComp").val();
            $.ajax({
                type: "post",
                url: "/Issue/Contact?id=" + id,
                success: function (data) {
                    $("#selCon").empty();
                    for (var i = 0; i < data.length; i++) {
                        var opt = new Option(data[i].contactName, data[i].id);
                        $('#selCon').append(opt);

                    }
                }

            });
        });

    });
</script>