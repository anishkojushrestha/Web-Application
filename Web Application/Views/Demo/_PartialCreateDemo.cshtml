@model Web_Application.ModelViews.DemoMV

<style>
    .rw {
        width: 30%;
    }
</style>
<div class="modal fade" id="addRegister" data-bs-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content" style="width:155%; margin-left: -27%; margin-top: -10px;">
            <div class="modal-header">
                <h4 class="modal-title" id="addRegisterLabel">Create Demo</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal">
                </button>

            </div>
            <div class="modal-body">
                <form asp-action="CreateDemo" asp-controller="Demo">
                    @Html.AntiForgeryToken()
                    <div class="col" style="margin-left: 45px;">
                        <div class="row pb-4">
                            <div class="rw">
                                <label class="form-label">Company Name:</label>
                                <input type="text" asp-for="CompanyName" class="form-control" required>
                            </div>
                            <div class="rw">
                                <label class="form-label">Email:</label>
                                <input type="text" class="form-control" asp-for="Email" required>
                            </div>
                            <div class="rw">
                                <label class="form-label">Contact Person:</label>
                                <input type="text" asp-for="ContactPerson" class="form-control" required>
                            </div>
                        </div>
                        <div class="row pb-4">
                            <div class="rw">
                                <label class="form-label">Address:</label>
                                <input type="text" asp-for="Address" class="form-control" required></input>
                            </div>
                            <div class="rw">
                                <label class="form-label">Pan No.</label>
                                <input type="text" asp-for="PanNo" class="form-control" required>
                            </div>
                            <div class="rw">
                                <label class="form-label">Phone No:</label>
                                <input type="text" asp-for="Phone" class="form-control" required>
                            </div>

                        </div>
                        <div class="row pb-4">
                            <div class="rw">
                                <label class="form-label">Mobile:</label>
                                <input type="text" asp-for="Mobile" class="form-control" required></input>
                            </div>
                            <div class="rw">
                                <label class="form-label">Date:</label>
                                <input type="date" asp-for="Date" class="form-control" required>

                            </div>
                            <div class="rw">
                                <label class="form-label">Feed Back:</label>
                                <textarea type="text" asp-for="FeedBack" style="height:65px;" class="form-control" required></textarea>
                            </div>

                        </div>
                        
                        <div class="row pb-6">
                            <div class="rw">
                            <label class="form-label">Remarks:</label>
                            <input type="text" asp-for="Remarks" class="form-control" required>

                        </div>
                            <div class="f" style="width:40%;">
                                <label class="form-label">Attachment:</label>
                                <input type="file" asp-for="Attechment" class="form-control" required />

                            </div>
                        </div>
                        <div class="row pt-4">
                            <div class="btnn" style="display:flex; flex-direction:column; align-items:center;">
                                <button type="submit" class="btn btn-primary">Submit</button>

                            </div>
                        </div>

                    </div>


                </form>


            </div>

        </div>
    </div>
</div>

