@model Web_Application.ModelViews.UpdateRegisterVM

<div class="modal fade" id="addRegister" data-bs-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="addRegisterLabel">New Register</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal">
                </button>

            </div>
            <div class="modal-body">
                <form asp-action="EditRegister" asp-controller="User" method="post" >
                    @Html.AntiForgeryToken()
                    <input type="text" asp-for="Id" class="form-control" hidden>
                    <div class="mb-3">
                        <input type="text" asp-for="FirstName" class="form-control" placeholder="First Name" required>
                        <span asp-validation-for="FirstName" class="alert-danger"></span>
                    </div>
                    <div class="mb-3">
                        <input type="text" asp-for="LastName" class="form-control" placeholder="Last Name" required>
                        <span asp-validation-for="LastName" class="alert-danger"></span>
                    </div>
                    <div class="mb-3">
                        <input type="text" asp-for="UserName" class="form-control" placeholder="Username" required>
                        <span asp-validation-for="UserName" class="alert-danger"></span>
                    </div>
                    <div class="mb-3">
                        <input type="email" asp-for="Email" class="form-control" placeholder="Email" required>
                        <span asp-validation-for="Email" class="alert-danger"></span>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary" >Submit</button>

                    </div>
                </form>

            </div>
            
        </div>
    </div>
</div>
