@model Web_Application.ModelViews.RegisterVM
<style>
    .rw {
        width: 48%;
    }
    .rw1{
        width: 96%;
    }
</style>
<div class="modal fade" id="addRegister" data-bs-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content" style="width:80%;  margin-top: 20px; margin-left:-5%">
            <div class="modal-header p-2">
                <h4 class="modal-title" id="addRegisterLabel">Registration</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal">
                </button>

            </div>
            <div class="modal-body">
                <form asp-action="Register" asp-controller="User">

                    @Html.AntiForgeryToken()
                    <div class="col" style="margin-left: 13px; ">
                        <div class="row pb-1">
                            <div class="rw">
                                <label class="form-label">First Name:</label>
                                <input type="text" asp-for="FirstName" style="height:33px" class="form-control" required>
                            </div>
                            <div class="rw">
                                <label class="form-label">Last Name:</label>
                                <input type="text" class="form-control" style="height:33px" asp-for="LastName" required>
                            </div>
                        </div>
                        <div class="row pb-1">
                            <div class="rw1">
                                <label class="form-label">Username:</label>
                                <input type="text" asp-for="UserName" style="height:33px" class="form-control" required>
                            </div>
                            
                        </div>
                        <div class="row pb-1">
                            <div class="rw1 ">
                                <label class="form-label">Email:</label>
                                <input type="email" asp-for="Email" style="height:33px" class="form-control" style="height:65px;" required></input>
                            </div>
                        </div>
                        <div class="row pb-1">
                            <div class="rw1">
                                <label class="form-label">Profile:</label>
                                <select asp-for="Profile" style="height:33px" id="selProf" class="form-select">
                                    <option>Admin</option>
                                    <option>SuperAdmin</option>
                                    <option>OMSUser</option>
                                    <option>Support</option>
                                </select>
                            </div>
                        </div>

                        <div class="row pb-1" id="selDiv" style="display:none">
                            <div class="rw1">
                                <label class="form-label">Company:</label>
                                <select asp-for="CompanyId" id="selComp" st asp-items="ViewBag.Company" style="height:33px" class="form-select">
                                    <option disabled selected>Select</option>
                                </select>
                            

                            </div>
                        </div>
                        <div class="row pb-2">
                            <div class="rw">
                                <label class="form-label">New Passwrd:</label>
                                <input type="password" asp-for="NewPassword" style="height:33px" class="form-control" required>
                            </div>
                            <div class="rw">
                                <label class="form-label">Confirm Password:</label>
                                <input type="password" class="form-control" style="height:33px" asp-for="ConfirmPassword" required>
                            </div>
                        </div>
                        <div class="form-check">
                            <input type="checkbox" asp-for="IsActive" class="form-check-input" id="exampleCheck1">
                            <label class="form-check-label">Is Active</label>
                        </div>
                        <div class="row">
                            <div class="btnn" style="display:flex; flex-direction:column; align-items:center;">
                                <button type="submit" class="btn btn-primary">Submit</button>
                                
                            </div>
                        </div>

                    </div>


                </form>


            </div>

        </div>
    </div>
</div>
<script>
    $("#selProf").on("change", function(){
        if ($(this).val() === "OMSUser"){
            document.getElementById("selDiv").style.display ="block";
        } else{
            document.getElementById("selDiv").style.display = "none";
        }
    })
</script>